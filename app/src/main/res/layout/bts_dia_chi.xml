<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF">


        <View
            android:id="@+id/v_dia_chi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_view_dia_chi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0.45"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_dia_chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/medium"
            android:text="@string/your_informations"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/v_dia_chi"
            app:layout_constraintTop_toTopOf="@id/v_dia_chi" />


        <ImageView
            android:id="@+id/im_dia_chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/ic_hihi"
            app:layout_constraintBottom_toBottomOf="@id/v_dia_chi"
            app:layout_constraintLeft_toLeftOf="@id/tv_dia_chi"
            app:layout_constraintTop_toBottomOf="@id/tv_dia_chi" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/medium"
            android:text="@string/yor_delivery_address"
            android:textColor="#9C9C9C"

            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_home_number"
            app:layout_constraintLeft_toRightOf="@id/im_dia_chi"
            app:layout_constraintTop_toTopOf="@id/im_dia_chi" />

        <TextView
            android:id="@+id/tv_home_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/medium"
            android:text="@string/your_informations"
            android:textColor="#272727"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/im_dia_chi"
            app:layout_constraintLeft_toLeftOf="@id/tv_address"
            app:layout_constraintTop_toBottomOf="@id/tv_address" />

        <ImageView
            android:id="@+id/im_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:padding="3dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toTopOf="@id/v_dia_chi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_dia_chi" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>